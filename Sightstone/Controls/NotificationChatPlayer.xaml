<UserControl x:Class="Sightstone.Controls.NotificationChatPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="28">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="BlinkRectangle" Fill="#FFFFD100" HorizontalAlignment="Stretch" Height="2" Margin="0,0,0,0" Panel.ZIndex="1" VerticalAlignment="Top" Visibility="Hidden" />
        <Label x:Name="PlayerLabelName" Grid.Column="0" Foreground="{StaticResource PrimaryHueLightBrush}" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0" Margin="5,0,5,0">Username</Label>
        <Button x:Name="CloseButton" Grid.Column="1" Style="{x:Null}" Foreground="{StaticResource PrimaryHueLightBrush}" HorizontalAlignment="Right" Padding="0" VerticalAlignment="Center" Width="25" Click="CloseButton_Click" BorderThickness="0" Background="{x:Null}">x</Button>
    </Grid>
</UserControl>