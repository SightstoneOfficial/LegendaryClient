<UserControl x:Class="Sightstone.Controls.ChampionAbility"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="75" d:DesignWidth="375">
    <Grid>
        <Image x:Name="AbilityImage" HorizontalAlignment="Left" Height="64" Margin="5,5,0,0" VerticalAlignment="Top" Width="64" />
        <Label x:Name="AbilityName" Foreground="White" Content="Ace in the Hole" HorizontalAlignment="Left" Margin="75,-3,0,0" FontWeight="SemiBold" VerticalAlignment="Top" />
        <Label x:Name="AbilityHotKey" Foreground="White" Content="Passive" HorizontalAlignment="Left" Margin="321,-3,0,0"  FontWeight="SemiBold" VerticalAlignment="Top" Width="49" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="AbilityDescription" HorizontalAlignment="Right" Width="295" Margin="0,20,5,5" TextWrapping="WrapWithOverflow" Text="" VerticalAlignment="Stretch" Background="Transparent" BorderBrush="{x:Null}" Foreground="White" FontSize="10" IsReadOnly="True"/>
    </Grid>
</UserControl>