<Page x:Class="Sightstone.Windows.WebsiteOverlayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:my="http://schemas.awesomium.com/winfx"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      Title="WebsiteOverlayPage"
      mc:Ignorable="d" d:DesignHeight="768"
      d:DesignWidth="1280">

    <Grid Background="#B2000000">
        <Grid Margin="20,50,20,50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FF2B2B2B">
            <Grid Margin="10,40,10,10">
                <my:WebControl x:Name="WebsiteHandler" />
            </Grid>
            <Button x:Name="CloseButton" Width="30" Height="30" Margin="0,5,5,0" HorizontalAlignment="Right"
                    VerticalAlignment="Top" Content="X" />
            <Button Width="100" Height="25" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Content="OP.GG" />
            <Button Width="100" Height="25" Margin="115,10,0,0" HorizontalAlignment="Left"
                    VerticalAlignment="Top" Content="LOLKING.COM" />

        </Grid>
    </Grid>
</Page>