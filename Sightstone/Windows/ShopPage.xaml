<Page x:Class="Sightstone.Windows.ShopPage" xmlns:my="http://schemas.awesomium.com/winfx"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      Title="ShopPage"
      mc:Ignorable="d" d:DesignHeight="768"
      d:DesignWidth="1280">

    <Grid Background="Black" Loaded="Grid_Loaded">
        <my:WebControl x:Name="ShopBrowser" Width="1250" Height="680" HorizontalAlignment="Center"
                       VerticalAlignment="Center" NativeViewInitialized="ShopBrowser_NativeViewInitialized" />
        <Button x:Name="RefreshButton" Width="55" Margin="0,10,10,0" HorizontalAlignment="Right"
                VerticalAlignment="Top" Content="{DynamicResource Refresh}" Click="RefreshButton_Click" />
    </Grid>
</Page>