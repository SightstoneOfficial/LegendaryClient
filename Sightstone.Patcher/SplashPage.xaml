<Window x:Class="Sightstone.Patcher.SplashPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="100" Width="300"  AllowsTransparency="True" WindowStyle="None"
        Background="Transparent" WindowStartupLocation="CenterScreen" Topmost="True" ShowInTaskbar="False" >
    <Grid>
        <Label x:Name="ProgramTitle"  Content="Sightstone" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="30" FontFamily="/Sightstone.Patcher;component/#Lobster 1.3" Foreground="#FF151515" Width="300"/>
        <Label x:Name="Current" Content="Starting up" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,51,0,0" Width="300" Foreground="#FF1F1F1F"/>
    </Grid>
</Window>
