<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="LegendaryClient.Controls.BotControl"
    mc:Ignorable="d"
    d:DesignHeight="65" d:DesignWidth="300">
    <Grid>
        <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="37" />
        <Label x:Name="PlayerName" Content="Annie Bot" HorizontalAlignment="Left" Margin="42,0,0,0" FontSize="20"
               FontWeight="ExtraLight" VerticalAlignment="Top" Width="225" />
        <Button x:Name="BanButton" Content="X" HorizontalAlignment="Left" Margin="272,4,0,0" VerticalAlignment="Top"
                Width="25" Height="25" />
        <Label x:Name="OwnerLabel" Content="Owner" HorizontalAlignment="Right" Margin="0,0,5,0" FontSize="20"
               FontWeight="ExtraLight" VerticalAlignment="Top" Visibility="Hidden" />
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="165" Margin="10,37,0,0" />
        <ComboBox HorizontalAlignment="Right" VerticalAlignment="Top" Width="117" Margin="0,37,3,0" />
    </Grid>
</UserControl>