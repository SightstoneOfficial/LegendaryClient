<UserControl x:Class="LegendaryClient.Controls.ChampionDetailAbility"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid HorizontalAlignment="Stretch">
        <Image x:Name="AbilityImage" HorizontalAlignment="Left" Height="64" Margin="5,5,0,0" VerticalAlignment="Top"
               Width="64" />
        <Label x:Name="AbilityName" Content="Ace in the Hole" HorizontalAlignment="Left" Margin="70,-2,0,0"
               FontSize="30" FontWeight="ExtraLight" VerticalAlignment="Top" />
        <TextBox x:Name="AbilityDescription" HorizontalAlignment="Stretch" Margin="75,50,5,5"
                 TextWrapping="WrapWithOverflow" Text="" VerticalAlignment="Stretch" Background="#7F000000"
                 BorderBrush="{x:Null}" Foreground="White" />
    </Grid>
</UserControl>