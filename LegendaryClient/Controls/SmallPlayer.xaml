<UserControl x:Class="LegendaryClient.Controls.SmallPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="30" Width="250">
    <Grid Margin="0,0,0,23">
        <Rectangle Fill="#02000000" Margin="0,0,0,16" />
        <!-- Allow entire control to be hovered over -->
        <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="26" Margin="2,2,0,-21" VerticalAlignment="Top" Width="23" Source="/LegendaryClient;component/Icon.ico" />
        <Label x:Name="LevelLabel" Content="30" HorizontalAlignment="Left" Margin="2,4,0,-21" Foreground="White" FontWeight="SemiBold">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="1" />
            </Label.Effect>
        </Label>

        <Label x:Name="PlayerName" Content="Eddy5641" HorizontalAlignment="Left" Margin="30,1,0,-21" VerticalAlignment="Top" FontWeight="Bold" Foreground="White" Height="26" />
    </Grid>
</UserControl>