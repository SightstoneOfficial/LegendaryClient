<UserControl x:Class="LegendaryClient.Controls.ChatGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             MinHeight="30" d:DesignWidth="250">
    <Grid x:Name="GroupGrid" MouseDown="GroupGrid_MouseDown">
        <Label x:Name="ExpandLabel" Content="+" HorizontalAlignment="Left" Margin="2,0,0,0" FontSize="16"
               VerticalAlignment="Top" />
        <Label x:Name="NameLabel" Content="GroupName" HorizontalAlignment="Center" Margin="0,0,0,0" FontSize="16"
               FontWeight="ExtraLight" VerticalAlignment="Top" />
        <Label x:Name="PlayersLabel" Content="5" HorizontalAlignment="Right" Margin="0,0,2,0" FontSize="16"
               FontWeight="ExtraLight" VerticalAlignment="Top" />
        <Grid x:Name="GroupListView" HorizontalAlignment="Stretch" Margin="-5,30,0,0" VerticalAlignment="Stretch"
              Visibility="Collapsed" />
    </Grid>
</UserControl>