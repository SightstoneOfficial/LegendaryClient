<Page x:Class="LegendaryClient.Windows.MessageOverlay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="1280"
	Title="MessageOverlay">

    <Grid Background="#B2000000">
        <Grid HorizontalAlignment="Center" Width="500" Height="450" Margin="0,0,0,0" VerticalAlignment="Center" Background="#B22B2B2B">
            <Label x:Name="MessageTitle" Content="Alert!" HorizontalAlignment="Left" Margin="10,10,0,0" FontWeight="ExtraLight" FontSize="40" VerticalAlignment="Top" />
            <Button x:Name="AcceptButton" Content="OK" HorizontalAlignment="Stretch" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="30" Click="AcceptButton_Click" />
            <TextBox x:Name="MessageTextBox" HorizontalAlignment="Stretch" Margin="10,80,10,50" FontSize="20" FontWeight="ExtraLight" TextWrapping="Wrap" Background="{x:Null}" BorderBrush="{x:Null}" />
        </Grid>
    </Grid>
</Page>